<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/lightest_grey"
              android:fitsSystemWindows="true"
              tools:context="com.duckydev.mvpdagger.features.FeaturesFragment">


    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/noEpisodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/noEpisodesIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_report" />

        <TextView
            android:id="@+id/noEpisodesMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="You have no Episodes!"
            android:layout_marginBottom="@dimen/list_item_padding" />

        <TextView
            android:id="@+id/noEpisodesAdd"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/touch_feedback"
            android:gravity="center"
            android:text="Add" />

    </LinearLayout>

</RelativeLayout>
