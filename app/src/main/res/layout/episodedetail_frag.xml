                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24:21"/>

                        <RelativeLayout
                            android:paddingLeft="@dimen/common_side_padding_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/listen_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_volume_up"/>

                            <TextView
                                android:paddingLeft="@dimen/common_side_padding_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/listen_iv"
                                android:text="Listen"/>

                        </RelativeLayout>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_margin="@dimen/common_side_padding_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_playlist_add"
                            />

                        <ImageView
                            android:layout_margin="@dimen/common_side_padding_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_favorite"
                            />

                        <ImageView
                            android:layout_margin="@dimen/common_side_padding_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
